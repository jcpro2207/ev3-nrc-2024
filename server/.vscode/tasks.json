    "version": "2.0.0",
    "tasks": [
        {
            "label": "server.py [run Flask server]",
            "type": "shell",
            "command": ".venv\\scripts\\activate && flask --app server --debug run --port 8000",
            "problemMatcher": []
        },
        {
            "label": "ngrok.exe [expose localhost:8000 to the Internet]",
            "type": "shell",
            "command": "ngrok http 8000 --domain hagfish-hardy-baboon.ngrok-free.app",
            "problemMatcher": []
        }
    ]
}